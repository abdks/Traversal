@model Traversal.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						
					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bize Katılın</h4>
					</div>
					<form method="post" class="signin-form">
						<div class="form-input">
							<label>Adınız</label>
							<input type="text" asp-for="Name"/>
							<span asp-validation-for="Name" style="color:red" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Soyadınız</label>
							<input type="text" asp-for="Surname"/>
							<span asp-validation-for="Surname" style="color:red" class="text-danger"></span>

						</div>
						<div class="form-input">
							<label>Kullanıcı Adınız</label>
							<input type="text" asp-for="Username"  />
							<span asp-validation-for="Username" style="color:red" class="text-danger"></span>

						</div>
						<div class="form-input">
							<label>Mail Adresiniz</label>
							<input type="text" asp-for="Mail"  />
							<span asp-validation-for="Mail" style="color:red" class="text-danger"></span>

						</div>
						<div class="form-input">
							<label>Şifreniz</label>
							<input type="password" asp-for="Password"  />
							<span asp-validation-for="Password" style="color:red" class="text-danger"></span>

						</div>
						<div class="form-input">
							<label>Şifre Tekrar</label>
							<input type="password" asp-for="ConfirmPassword"  />
							<span asp-validation-for="ConfirmPassword" style="color:red" class="text-danger"></span>

						</div>
						<div class="text-danger" asp-validation-summary="ModelOnly">

						</div>
						<button class="btn">Hesap Oluştur</button>
					</form>
					
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>