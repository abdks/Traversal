@model List<ApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Top 100 Imdb Listeleme</h1>

<table class="table tabl-bordered">
    <tr>
        <th>#</th>
        <th>Film Adı</th>
        <th>Imdb Puanı</th>
        <th>Yapım yılı</th>
        <th>Resim</th>
        <th>Fragman</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.rank</td>
            <td>@item.title</td>
            <td>@item.rating</td>
            <td>@item.year</td>
            <td><img src="@item.image" style="height:50px; width:50px;"></td>
            <td><a href="@item.imdb_link">Fragmanı izle</a></td>
        </tr>
    }
</table>